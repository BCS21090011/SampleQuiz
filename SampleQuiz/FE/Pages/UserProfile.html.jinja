<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>User Profile</title>

  <style>
    :root{
      --bg:#0f1724;
      --card:#0b1220;
      --muted:#9aa4b2;
      --accent:#6ee7b7;
      --danger:#ff6b6b;
      --warning:#ffd93d;
      --glass: rgba(255,255,255,0.03);
      color-scheme: dark;
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    html,body{height:100%;margin:0}
    body{
      background:linear-gradient(180deg,#071029 0%, #081226 60%);
      color:#e6eef6;
      padding:24px;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }

    .container{
      max-width:800px;
      margin:0 auto;
    }

    header{
      margin-bottom:24px;
    }
    h1{margin:0 0 8px 0;font-size:1.8rem}
    .subtitle{color:var(--muted); font-size:0.95rem}

    .card{
      background:linear-gradient(180deg, rgba(255,255,255,0.025), rgba(255,255,255,0.01));
      border-radius:12px;
      padding:20px;
      box-shadow: 0 6px 18px rgba(2,6,23,0.6);
      border:1px solid rgba(255,255,255,0.04);
      margin-bottom:16px;
    }

    .card-title{
      font-size:1.1rem;
      font-weight:700;
      margin-bottom:16px;
      color:var(--accent);
    }

    .info-grid{
      display:grid;
      gap:12px;
    }

    .info-row{
      display:grid;
      grid-template-columns: 140px 1fr;
      gap:12px;
      align-items:center;
      padding:8px 0;
    }

    .info-label{
      font-weight:600;
      color:var(--muted);
      font-size:0.9rem;
    }

    .info-value{
      color:#e6eef6;
      font-size:0.95rem;
    }

    .info-value.empty{
      color:var(--muted);
      font-style:italic;
    }

    input, select{
      background:rgba(255,255,255,0.05);
      border:1px solid rgba(255,255,255,0.1);
      border-radius:6px;
      padding:8px 12px;
      color:#e6eef6;
      font-size:0.95rem;
      width:100%;
      max-width:300px;
    }

    input:focus, select:focus{
      outline:none;
      border-color:var(--accent);
      background:rgba(255,255,255,0.08);
    }

    .btn-group{
      display:flex;
      gap:12px;
      margin-top:16px;
      flex-wrap:wrap;
    }

    button{
      background:transparent;
      color:var(--accent);
      border:1px solid rgba(110,231,183,0.12);
      padding:10px 18px;
      border-radius:8px;
      cursor:pointer;
      font-weight:600;
      font-size:0.9rem;
      transition:all 0.2s ease;
    }

    button:hover{
      background:rgba(110,231,183,0.06);
      border-color:rgba(110,231,183,0.25);
    }

    button.primary{
      background:var(--accent);
      color:#0b1220;
      border-color:var(--accent);
    }

    button.primary:hover{
      background:#5dd9a5;
    }

    button.danger{
      color:var(--danger);
      border-color:rgba(255,107,107,0.12);
    }

    button.danger:hover{
      background:rgba(255,107,107,0.06);
      border-color:rgba(255,107,107,0.25);
    }

    button:disabled{
      opacity:0.5;
      cursor:not-allowed;
    }

    .status-message{
      padding:12px;
      border-radius:8px;
      margin-bottom:16px;
      font-size:0.9rem;
    }

    .status-message.error{
      background:rgba(255,107,107,0.1);
      border:1px solid rgba(255,107,107,0.2);
      color:#ffb3b3;
    }

    .status-message.success{
      background:rgba(110,231,183,0.1);
      border:1px solid rgba(110,231,183,0.2);
      color:#b3f5dc;
    }

    .status-message.info{
      background:rgba(93,217,255,0.1);
      border:1px solid rgba(93,217,255,0.2);
      color:#b3e8ff;
    }

    .hidden{
      display:none !important;
    }

    @media (max-width:640px){
      .info-row{
        grid-template-columns: 1fr;
        gap:4px;
      }
      
      .btn-group{
        flex-direction:column;
      }
      
      button{
        width:100%;
      }
    }
  </style>
  <link rel="stylesheet" href="../Utils/CSS/NavButton.css" />
</head>
<body>
  <div class="container">
    <header>
      <h1>User Profile</h1>
      <div class="subtitle">View and manage your account information</div>
    </header>

    <div id="statusContainer"></div>

    <!-- User Info Card -->
    <div class="card">
      <div class="card-title">Account Information</div>
      <div class="info-grid" id="infoGrid">
        <div class="info-row">
          <div class="info-label">Username:</div>
          <div class="info-value" id="username">Loading...</div>
        </div>
        <div class="info-row">
          <div class="info-label">Email:</div>
          <div class="info-value" id="email">Loading...</div>
        </div>
        <div class="info-row">
          <div class="info-label">Birth Date:</div>
          <div class="info-value" id="birthdate">Loading...</div>
        </div>
        <div class="info-row">
          <div class="info-label">Gender:</div>
          <div class="info-value" id="gender">Loading...</div>
        </div>
        <div class="info-row">
          <div class="info-label">Role:</div>
          <div class="info-value" id="role">Loading...</div>
        </div>
        <div class="info-row">
          <div class="info-label">Member Since:</div>
          <div class="info-value" id="memberSince">Loading...</div>
        </div>
      </div>
      <div class="btn-group">
        <button id="editInfoBtn" class="primary">Edit Info</button>
        <button id="cancelEditBtn" class="hidden">Cancel</button>
        <button id="saveInfoBtn" class="hidden primary">Save Changes</button>
      </div>
    </div>

    <!-- Change Password Card -->
    <div class="card">
      <div class="card-title">Change Password</div>
      <div class="info-grid">
        <div class="info-row">
          <div class="info-label">New Password:</div>
          <input type="password" id="newPassword" placeholder="Enter new password" />
        </div>
        <div class="info-row">
          <div class="info-label">Confirm Password:</div>
          <input type="password" id="confirmPassword" placeholder="Confirm new password" />
        </div>
      </div>
      <div class="btn-group">
        <button id="changePasswordBtn" class="primary">Change Password</button>
      </div>
    </div>

    <!-- Admin Tools Card (only visible for admin users) -->
    <div class="card" id="adminToolsCard" style="display:none;">
      <div class="card-title">ðŸ”§ Admin Tools</div>
      <div class="btn-group">
        <button id="adminUsersBtn" class="primary">Manage Users</button>
        <button id="adminResultsBtn" class="primary">View All Results</button>
      </div>
    </div>

    <!-- Actions Card -->
    <div class="card">
      <div class="card-title">Account Actions</div>
      <div class="btn-group">
        <button id="logoutBtn" class="danger">Logout</button>
        <button id="backBtn">Back to Main Page</button>
      </div>
    </div>
  </div>

  <script>
      const isAuthed = {{ isAuthed_flask | tojson }};
      const authError = {{ authError_flask | tojson }};
      const userID = {{ userID_flask | tojson }};
      const userRole = {{ userRole_flask | tojson }};
  </script>
  <script src="../Utils/JS/NavButton.js"></script>
  <script src="../Utils/JS/UserProfile.js"></script>
</body>
</html>
