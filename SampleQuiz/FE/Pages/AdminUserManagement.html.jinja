<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin - User Management</title>

  <style>
    :root{
      --bg:#0f1724;
      --card:#0b1220;
      --muted:#9aa4b2;
      --accent:#6ee7b7;
      --danger:#ff6b6b;
      --warning:#ffd93d;
      --glass: rgba(255,255,255,0.03);
      color-scheme: dark;
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    html,body{height:100%;margin:0}
    body{
      background:linear-gradient(180deg,#071029 0%, #081226 60%);
      color:#e6eef6;
      padding: 100px 24px;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }

    .container{
      max-width:1200px;
      margin:0 auto;
    }

    header{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-bottom:24px;
      flex-wrap:wrap;
      gap:16px;
    }
    
    h1{margin:0 0 8px 0;font-size:1.8rem}
    .subtitle{color:var(--muted); font-size:0.95rem}

    .card{
      background:linear-gradient(180deg, rgba(255,255,255,0.025), rgba(255,255,255,0.01));
      border-radius:12px;
      padding:20px;
      box-shadow: 0 6px 18px rgba(2,6,23,0.6);
      border:1px solid rgba(255,255,255,0.04);
      margin-bottom:16px;
    }

    .card-title{
      font-size:1.1rem;
      font-weight:700;
      margin-bottom:16px;
      color:var(--accent);
    }

    .status-message{
      padding:12px;
      border-radius:8px;
      margin-bottom:16px;
      font-size:0.9rem;
    }

    .status-message.error{
      background:rgba(255,107,107,0.1);
      border:1px solid rgba(255,107,107,0.2);
      color:#ffb3b3;
    }

    .status-message.success{
      background:rgba(110,231,183,0.1);
      border:1px solid rgba(110,231,183,0.2);
      color:#b3f5dc;
    }

    .status-message.info{
      background:rgba(93,217,255,0.1);
      border:1px solid rgba(93,217,255,0.2);
      color:#b3e8ff;
    }

    button{
      background:transparent;
      color:var(--accent);
      border:1px solid rgba(110,231,183,0.12);
      padding:8px 14px;
      border-radius:6px;
      cursor:pointer;
      font-weight:600;
      font-size:0.85rem;
      transition:all 0.2s ease;
    }

    button:hover{
      background:rgba(110,231,183,0.06);
      border-color:rgba(110,231,183,0.25);
    }

    button.primary{
      background:var(--accent);
      color:#0b1220;
      border-color:var(--accent);
    }

    button.primary:hover{
      background:#5dd9a5;
    }

    button.danger{
      color:var(--danger);
      border-color:rgba(255,107,107,0.12);
    }

    button.danger:hover{
      background:rgba(255,107,107,0.06);
      border-color:rgba(255,107,107,0.25);
    }

    button.small{
      padding:6px 10px;
      font-size:0.8rem;
    }

    .user-table{
      width:100%;
      border-collapse:collapse;
      margin-top:12px;
    }

    .user-table th{
      background:rgba(255,255,255,0.04);
      padding:12px;
      text-align:left;
      font-weight:700;
      color:var(--accent);
      border-bottom:2px solid rgba(255,255,255,0.06);
      font-size:0.85rem;
    }

    .user-table td{
      padding:10px 12px;
      border-bottom:1px solid rgba(255,255,255,0.03);
      font-size:0.9rem;
    }

    .user-table tr:hover{
      background:rgba(255,255,255,0.02);
    }

    .role-badge{
      display:inline-block;
      padding:4px 8px;
      border-radius:4px;
      font-size:0.75rem;
      font-weight:700;
      letter-spacing:0.5px;
    }

    .role-badge.admin{
      background:linear-gradient(135deg, #ff6b6b, #ee5a52);
      color:white;
    }

    .role-badge.player{
      background:rgba(110,231,183,0.15);
      color:var(--accent);
      border:1px solid rgba(110,231,183,0.2);
    }

    .actions{
      display:flex;
      gap:6px;
      flex-wrap:wrap;
    }

    .modal-overlay{
      position:fixed;
      inset:0;
      background:rgba(0,0,0,0.7);
      backdrop-filter:blur(4px);
      display:none;
      align-items:center;
      justify-content:center;
      z-index:1000;
    }

    .modal-overlay.active{
      display:flex;
    }

    .modal{
      background:#0b1220;
      border-radius:12px;
      padding:24px;
      max-width:500px;
      width:90%;
      box-shadow:0 12px 40px rgba(0,0,0,0.6);
      border:1px solid rgba(255,255,255,0.08);
    }

    .modal h2{
      margin:0 0 16px 0;
      font-size:1.3rem;
      color:var(--accent);
    }

    .form-group{
      margin-bottom:16px;
    }

    .form-group label{
      display:block;
      margin-bottom:6px;
      color:var(--muted);
      font-weight:600;
      font-size:0.9rem;
    }

    .form-group input, .form-group select{
      width:100%;
      padding:10px 12px;
      background:rgba(255,255,255,0.05);
      border:1px solid rgba(255,255,255,0.1);
      border-radius:6px;
      color:#e6eef6;
      font-size:0.95rem;
box-sizing:border-box;
    }

    .form-group select option {
      color: #e6eef6;
      background:black;
    }

    .form-group input:focus, .form-group select:focus{
      outline:none;
      border-color:var(--accent);
      background:rgba(255,255,255,0.08);
    }

    .modal-actions{
      display:flex;
      gap:10px;
      margin-top:20px;
      justify-content:flex-end;
    }

    .hidden{
      display:none !important;
    }

    .empty-state{
      text-align:center;
      padding:40px;
      color:var(--muted);
    }

    @media (max-width:768px){
      .user-table{
        font-size:0.85rem;
      }
      
      .user-table th, .user-table td{
        padding:8px;
      }
      
      .actions{
        flex-direction:column;
      }
      
      .actions button{
        width:100%;
      }
    }
  </style>
  <link rel="stylesheet" href="../Utils/CSS/NavButton.css" />
</head>
<body>
  <div class="container">
    <header>
      <div>
        <h1>üë• User Management</h1>
        <div class="subtitle">Admin panel for managing user accounts</div>
      </div>
      <div style="display:flex;gap:10px;flex-wrap:wrap;">
        <button id="createUserBtn" class="primary">+ Create User</button>
        <button id="refreshBtn">üîÑ Refresh</button>
        <button id="backBtn">‚Üê Back</button>
      </div>
    </header>

    <div id="statusContainer"></div>

    <div class="card">
      <div class="card-title">All Users</div>
      <div id="usersTableContainer">
        <table class="user-table" id="usersTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th>Member Since</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="usersTableBody">
            <tr>
              <td colspan="6" class="empty-state">Loading users...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Create User Modal -->
  <div id="createModal" class="modal-overlay">
    <div class="modal">
      <h2>Create New User</h2>
      <form id="createUserForm">
        <div class="form-group">
          <label for="createUsername">Username *</label>
          <input type="text" id="createUsername" required />
        </div>
        <div class="form-group">
          <label for="createPassword">Password *</label>
          <input type="password" id="createPassword" required />
        </div>
        <div class="form-group">
          <label for="createEmail">Email</label>
          <input type="email" id="createEmail" />
        </div>
        <div class="form-group">
          <label for="createBirthdate">Birth Date</label>
          <input type="date" id="createBirthdate" />
        </div>
        <div class="form-group">
          <label for="createGender">Gender</label>
          <select id="createGender">
            <option value="">Not set</option>
            <option value="MALE">Male</option>
            <option value="FEMALE">Female</option>
            <option value="OTHER">Other</option>
          </select>
        </div>
        <div class="modal-actions">
          <button type="button" id="cancelCreateBtn">Cancel</button>
          <button type="submit" class="primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit User Modal -->
  <div id="editModal" class="modal-overlay">
    <div class="modal">
      <h2>Edit User</h2>
      <form id="editUserForm">
        <input type="hidden" id="editUserId" />
        <div class="form-group">
          <label for="editEmail">Email</label>
          <input type="email" id="editEmail" />
        </div>
        <div class="form-group">
          <label for="editBirthdate">Birth Date</label>
          <input type="date" id="editBirthdate" />
        </div>
        <div class="form-group">
          <label for="editGender">Gender</label>
          <select id="editGender">
            <option value="">Not set</option>
            <option value="MALE">Male</option>
            <option value="FEMALE">Female</option>
            <option value="OTHER">Other</option>
          </select>
        </div>
        <div class="modal-actions">
          <button type="button" id="cancelEditBtn">Cancel</button>
          <button type="submit" class="primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

  <script>
      const isAuthed = {{ isAuthed_flask | tojson }};
      const authError = {{ authError_flask | tojson }};
      const userID = {{ userID_flask | tojson }};
      const userRole = {{ userRole_flask | tojson }};
  </script>
  <script src="../Utils/JS/NavButton.js"></script>
  <script src="../Utils/JS/AdminUserManagement.js"></script>
</body>
</html>
